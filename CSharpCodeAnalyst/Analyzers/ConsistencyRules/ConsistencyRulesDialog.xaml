<Window x:Class="CSharpCodeAnalyst.Analyzers.ConsistencyRules.ConsistencyRulesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resources="clr-namespace:CSharpCodeAnalyst.Resources"
        Title="Consistency Rules Configuration"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Define consistency rules for your solution:"
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Main text area -->
        <GroupBox Grid.Row="1" Header="Rules Definition" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,5">
                    <Button x:Name="LoadFileButton" Content="Load from File..."
                            Width="120" Height="25" Margin="0,0,10,0"
                            Click="LoadFileButton_Click"/>
                    <Button x:Name="SaveFileButton" Content="Save to File..."
                            Width="120" Height="25" Margin="0,0,10,0"
                            Click="SaveFileButton_Click"/>
                    <Button x:Name="ClearButton" Content="Clear"
                            Width="80" Height="25"
                            Click="ClearButton_Click"/>
                </StackPanel>

                <!-- Rules text box -->
                <TextBox Grid.Row="1" x:Name="RulesTextBox"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="#FAFAFA"
                         Text="{Binding RulesText, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </GroupBox>

        <!-- Help text -->
        <Expander Grid.Row="2" Header="Syntax Help" IsExpanded="False" Margin="0,0,0,10">
            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="DarkGray">
                <Run Text="Examples:"/>
                <LineBreak/>
                <Run Text="DENY: Business.** !-> Data.**"/>
                <LineBreak/>
                <Run Text="ALLOW: Controllers.** -> Services.**"/>
                <LineBreak/>
                <Run Text="ISOLATE: Core.** -> Core.**"/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="Use * for single level, ** for multi-level matching"/>
                <LineBreak/>
                <Run Text="Lines starting with // are comments"/>
            </TextBlock>
        </Expander>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" Width="75" Height="25"
                    Margin="0,0,10,0" IsDefault="True"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="75" Height="25"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>