<UserControl x:Class="CSharpCodeAnalyst.Shared.UI.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="RootToast">

    <Border Background="#4CAF50"
            CornerRadius="5"
            Padding="15,10"
            BorderBrush="#45a049"
            BorderThickness="1"
            Opacity="1">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="270"
                              BlurRadius="10"
                              ShadowDepth="3"
                              Opacity="0.3" />
        </Border.Effect>

        <StackPanel Orientation="Horizontal">
            <Image Source="/Resources/check.png"
                   Width="16"
                   Height="16"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center" />

            <TextBlock x:Name="MessageText"
                       Text="Operation completed successfully!"
                       Foreground="White"
                       FontWeight="Medium"
                       VerticalAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>