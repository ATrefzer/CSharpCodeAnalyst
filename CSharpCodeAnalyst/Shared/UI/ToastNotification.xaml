<Window x:Class="CSharpCodeAnalyst.Shared.UI.ToastNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resources="clr-namespace:CSharpCodeAnalyst.Resources"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Opacity="0">

    <Border x:Name="ToastBorder"
            Background="#4CAF50"
            CornerRadius="5"
            Padding="15,10"
            BorderBrush="#45a049"
            BorderThickness="1"
            Opacity="1">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="270"
                              BlurRadius="10"
                              ShadowDepth="3"
                              Opacity="0.3" />
        </Border.Effect>

        <StackPanel Orientation="Horizontal">
            <Image Source="/Resources/check.png"
                   Width="16"
                   Height="16"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center" />

            <TextBlock x:Name="MessageText"
                       Text="{x:Static resources:Strings.Message_OperationCompleted_Successful}"
                       Foreground="White"
                       FontWeight="Medium"
                       VerticalAlignment="Center" />
        </StackPanel>
    </Border>
</Window>