<Window x:Class="CSharpCodeAnalyst.Areas.GraphArea.Filtering.GraphHideDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:graphArea="clr-namespace:CSharpCodeAnalyst.Areas.GraphArea"
        xmlns:resources="clr-namespace:CSharpCodeAnalyst.Resources"
        xmlns:filtering="clr-namespace:CSharpCodeAnalyst.Areas.GraphArea.Filtering"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance filtering:GraphHideDialogViewModel}"
        Title="{x:Static resources:Strings.GraphFilterDialog_Title}" Height="600" Width="450"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Element Types Section -->
        <TextBlock Grid.Row="0" Text="{x:Static resources:Strings.GraphFilterDialog_CodeElements}" FontWeight="Bold" Margin="0,0,0,5" />
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ElementTypeOptions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsChecked}"
                                      Content="{Binding DisplayName}"
                                      Margin="5,2" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Relationship Types Section -->
        <TextBlock Grid.Row="2" Text="{x:Static resources:Strings.GraphFilterDialog_Relationships}" FontWeight="Bold" Margin="0,0,0,5" />
        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding RelationshipTypeOptions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsChecked}"
                                      Content="{Binding DisplayName}"
                                      Margin="5,2" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{x:Static resources:Strings.Apply}" Width="75" Click="ApplyButton_Click" Margin="0,0,10,0" IsDefault="True" />
            <Button Content="{x:Static resources:Strings.Reset}" Width="75" Click="ResetButton_Click" Margin="0,0,10,0" />
            <Button Content="{x:Static resources:Strings.Cancel}" Width="75" Click="CancelButton_Click" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
