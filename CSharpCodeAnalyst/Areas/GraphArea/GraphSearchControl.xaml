<UserControl x:Class="CSharpCodeAnalyst.Areas.GraphArea.GraphSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:resources="clr-namespace:CSharpCodeAnalyst.Resources"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="300">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ImageStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <Style TargetType="Border" x:Key="SearchPanelStyle">
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="LightGray" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="3" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" Opacity="0.3" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Button" x:Key="ToggleButtonStyle">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- Toggle Button -->
        <Button x:Name="ToggleButton"
                Style="{StaticResource ToggleButtonStyle}"
                Click="ToggleButton_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="5"
                ToolTip="Toggle Search">
            <Image Source="/Resources/search_32.png" Width="24" Height="24" />
        </Button>

        <!-- Search Panel -->
        <Border Style="{StaticResource SearchPanelStyle}"
                Visibility="{Binding IsSearchVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="5,35,5,5"
                MinWidth="250">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchTextBox"
                         Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Height="22"
                         FontSize="12"
                         BorderThickness="1"
                         BorderBrush="LightGray"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         Background="LightYellow" />

                <Image Grid.Column="0" Style="{StaticResource InfoStyle}"
                       ToolTip="{x:Static resources:Strings.SearchPattern_Tooltip}" />

                <Button x:Name="ClearButton"
                        Grid.Column="1"
                        FontSize="14"
                        FontWeight="Bold"
                        Width="20"
                        Height="20"
                        Margin="5,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="ClearButton_Click"
                        ToolTip="{x:Static resources:Strings.ClearSearch_Tooltip}">
                    <Image Source="/Resources/clear_32.png" />
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>