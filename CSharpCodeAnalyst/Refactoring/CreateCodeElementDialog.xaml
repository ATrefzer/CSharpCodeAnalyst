<Window x:Class="CSharpCodeAnalyst.Refactoring.CreateCodeElementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:refactoring="clr-namespace:CSharpCodeAnalyst.Refactoring"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance refactoring:CreateCodeElementDialogViewModel}"
        Title="Create Virtual Code Element" Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        MinWidth="300"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Parent Context Info -->
        <TextBlock Grid.Row="0"
                   Text="{Binding ParentContext}"
                   FontWeight="Bold"
                   Foreground="DarkBlue" />

        <!-- Element Type Selection -->
        <TextBlock Grid.Row="2" Text="Element Type:" Margin="0,0,0,5" />
        <ComboBox Grid.Row="4"
                  ItemsSource="{Binding ValidElementTypes}"
                  SelectedItem="{Binding SelectedElementType}"
                  Height="25"
                  VerticalContentAlignment="Center" />

        <!-- Element Name -->
        <TextBlock Grid.Row="6" Text="Element Name:" Margin="0,0,0,5" />
        <TextBox Grid.Row="7"
                 x:Name="ElementNameTextBox"
                 Text="{Binding ElementName, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Height="25"
                 VerticalContentAlignment="Center" />

        <!-- Buttons -->
        <StackPanel Grid.Row="8"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Create"
                    Width="75"
                    Click="CreateButton_Click"
                    Margin="0,0,10,0"
                    IsDefault="True" />
            <Button Content="Cancel"
                    Width="75"
                    Click="CancelButton_Click"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>